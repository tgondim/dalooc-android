<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.dal.cs.android.dalooc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.dal.cs.dalooc.android.gui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.dal.cs.dalooc.android.gui.LearningObjectActivity"
            android:label="@string/title_activity_learning_object" >
            <intent-filter>
                <action android:name="LEARNING_OBJECT_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.dal.cs.dalooc.android.gui.CourseActivity"
            android:label="@string/title_activity_course" >
            <intent-filter>
                <action android:name="COURSE_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.dal.cs.dalooc.android.gui.AudioDetailActivity"
            android:label="@string/title_activity_audio_detail"
            android:theme="@android:style/Theme.Holo.Dialog" >
            <intent-filter>
                <action android:name="AUDIO_DETAIL_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.dal.cs.dalooc.android.gui.VideoDetailActivity"
            android:label="@string/title_activity_video_detail"
            android:theme="@android:style/Theme.Holo.Dialog" >
            <intent-filter>
                <action android:name="VIDEO_DETAIL_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.dal.cs.dalooc.android.gui.DocumentDetailActivity"
            android:label="@string/title_activity_document_detail"
            android:theme="@android:style/Theme.Holo.Dialog" >
            <intent-filter>
                <action android:name="DOCUMENT_DETAIL_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.dal.cs.dalooc.android.gui.CourseEditActivity"
            android:label="@string/title_activity_course_edit" >
            <intent-filter>
                <action android:name="COURSE_EDIT_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.dal.cs.dalooc.android.gui.CourseEditActivity"
            android:label="@string/title_activity_course_edit" >
        </activity>
        <activity
            android:name="ca.dal.cs.dalooc.android.gui.LearningObjectEditActivity"
            android:label="@string/title_activity_learning_object_edit" >
        </activity>
    </application>

</manifest>